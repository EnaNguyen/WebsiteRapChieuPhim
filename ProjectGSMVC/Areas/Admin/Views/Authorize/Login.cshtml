@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLoginRegister.cshtml";
}
<div class="login-header box-shadow">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <div class="brand-logo">
            <a href="@Url.Action("Login", "Authorize")">
                <img src="~/Admin/vendors/images/deskapp-logo.svg" alt="" />
            </a>
        </div>
        <div class="login-menu">
            <ul>
                <li><a href="@Url.Action("Login", "Authorize")">Đăng nhập</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="login-wrap d-flex align-items-center flex-wrap justify-content-center">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6 col-lg-7">
                <img src="~/Admin/vendors/images/login-page-img.png" alt="" />
            </div>
            <div class="col-md-6 col-lg-5">
                <div class="login-box bg-white box-shadow border-radius-10">
                    <div class="login-title">
                        <h2 class="text-center text-primary">Đăng nhập vào DeskApp</h2>
                    </div>
                    <form method="post" action="@Url.Action("Login", "Authorize")">
                        <div class="input-group custom">
                            <input type="text" class="form-control form-control-lg" placeholder="Tên đăng nhập" name="username" required />
                            <div class="input-group-append custom">
                                <span class="input-group-text">
                                    <i class="icon-copy dw dw-user1"></i>
                                </span>
                            </div>
                        </div>

                        <div class="input-group custom">
                            <input type="password" class="form-control form-control-lg" placeholder="**********" name="password" required />
                            <div class="input-group-append custom">
                                <span class="input-group-text">
                                    <i class="dw dw-padlock1"></i>
                                </span>
                            </div>
                        </div>
                        <a href="@Url.Action("Login", "Authorize")" class="btn btn-primary btn-lg btn-block">Đăng nhập</a>

@*                         <input class="btn btn-primary btn-lg btn-block" type="submit" value="Đăng nhập">
 *@                        @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger mt-3">
                                    @ViewBag.Error
                                </div>
                            }
                        <br />
                        <div class="row pb-30">
                            <div class="col-6">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1" />
                                    <label class="custom-control-label" for="customCheck1">Ghi nhớ</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="forgot-password">
                                    <a href="forgot-password.html">Quên mật khẩu</a>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="font-16 weight-600 pt-10 pb-10 text-center" data-color="#707373">
                                    HOẶC
                                </div>
                                <div class="input-group mb-0">
                                    <button type="button" class="btn btn-outline-primary btn-lg btn-block" data-bs-toggle="modal" data-bs-target="#myModal">
                                        Đăng ký tài khoản
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Đăng Ký -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Thêm Tài Khoản Admin Mới</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label for="ImageFile">Hình Ảnh</label>
                            <input type="file" class="form-control-file" id="ImageFile" name="ImageFile" accept="image/*" required />
                            <div>
                                <img src="" id="ShowHinhAnh" style="max-height: 200px" />
                            </div>
                            <h6 id="ImageFileError"></h6>
                        </div>
                        <div class="form-group">
                            <label for="TenTaiKhoan">Tên Tài Khoản</label>
                            <input type="text" class="form-control" id="TenTaiKhoan" name="TenTaiKhoan" placeholder="Nhập Tên Tài Khoản" required />
                            <h6 id="TenTaiKhoanError"></h6>
                        </div>
                        <div class="form-group">
                            <label for="MatKhau">Mật Khẩu</label>
                            <input type="password" class="form-control" id="MatKhau" name="MatKhau" required />
                            <h6 id="MatKhauError"></h6>
                        </div>
                        <div class="form-group">
                            <label for="ReMatKhau">Nhập lại Mật Khẩu</label>
                            <input type="password" class="form-control" id="ReMatKhau" name="ReMatKhau" required />
                            <h6 id="ReMatKhauError"></h6>
                        </div>
                        <div class="form-group">
                            <label for="NgaySinh">NgaySinh</label>
                            <input type="date" class="form-control" id="NgaySinh" name="NgaySinh">
                            <h6 id="NgaySinhError"></h6>
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label for="GioiTinh">Giới tính</label>
                            <div id="GioiTinh1">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="GioiTinh" id="GioiTinhNam" value="1">
                                    <label class="form-check-label" for="GioiTinhNam">Nam</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="GioiTinh" id="GioiTinhNu" value="0">
                                    <label class="form-check-label" for="GioiTinhNu">Nữ</label>
                                </div>
                            </div>
                            <h6 id="GioiTinhError"></h6>
                        </div>
                        <div class="form-group">
                            <label for="TenNguoiDung">Tên Người Dùng</label>
                            <input type="text" class="form-control" id="TenNguoiDung" name="TenNguoiDung" placeholder="Họ và Tên" required />
                            <h6 id="TenNguoiDungError"></h6>
                        </div>
                        <div class="form-group">
                            <label for="SDT">Số Điện Thoại</label>
                            <input type="text" class="form-control" id="Sdt" name="Sdt" placeholder="Nhập số điện thoại" required />
                            <h6 id="SDTError"></h6>
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="text" class="form-control" id="Email" name="Email" placeholder="Nhập Email của bạn" required />
                            <h6 id="EmailError"></h6>
                        </div>
                        <div class="form-group">
                            <label for="CCCD">CCCD</label>
                            <input type="text" class="form-control" id="Cccd" name="Cccd" placeholder="Nhập CCCD của bạn" required />
                            <h6 id="CCCDError"></h6>
                        </div>
                        <div class="form-group">
                            <label for="DiaChi">Địa Chỉ</label>
                            <input type="text" class="form-control" id="DiaChi" name="DiaChi" placeholder="Nhập Địa Chỉ của bạn" required />
                            <h6 id="DiaChiError"></h6>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd">Thêm Mới</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        $("#btnAdd").click(function (e) {

            var formData = new FormData();
            formData.append("TenTaiKhoan", $("#TenTaiKhoan").val());
            formData.append("TenNguoiDung", $("#TenNguoiDung").val());
            formData.append("MatKhau", $("#MatKhau").val());
            formData.append("ReMatKhau", $("#ReMatKhau").val());
            formData.append("Email", $("#Email").val());
            formData.append("Sdt", $("#Sdt").val());
            formData.append("NgaySinh", $("#NgaySinh").val());
            formData.append("Cccd", $("#Cccd").val());
            formData.append("DiaChi", $("#DiaChi").val());
            formData.append("GioiTinh", $("input[name='GioiTinh']:checked").val());
            formData.append("ImageFile", $("#ImageFile")[0].files[0]);
            console.log(formData);
            // Gửi AJAX
            $.ajax({
                url: '/Admin/TaiKhoan/CreateAdmin',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: `Thêm Tài Khoản Mới Thành Công!`,
                            text: response.message,
                            timer: 3000,
                            timerProgressBar: true,
                            showConfirmButton: false
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Lỗi!',
                            text: response.message,
                            showConfirmButton: true
                        });
                    }
                },
                error: function (xhr) {
                    // Hiển thị lỗi từ server
                    var errors = xhr.responseJSON;
                    if (errors) {
                        $("#TenTaiKhoanError").text(errors.TenTaiKhoan || "").css("color", "red");
                        $("#MatKhauError").text(errors.MatKhau || "").css("color", "red");
                        $("#ReMatKhauError").text(errors.ReMatKhau || "").css("color", "red");
                        $("#EmailError").text(errors.Email || "").css("color", "red");
                        $("#SDTError").text(errors.Sdt || "").css("color", "red");
                        $("#NgaySinhError").text(errors.NgaySinh || "").css("color", "red");
                        $("#CCCDError").text(errors.CCCD || "").css("color", "red");
                        $("#ImageFileError").text(errors.ImageFile || "").css("color", "red");
                        $("#TenNguoiDungError").text(errors.TenNguoiDung || "").css("color", "red");
                    } else {
                        alert("Đã xảy ra lỗi không xác định.");
                    }
                }
            });
        });
    });
</script>
