@model ProjectGSMVC.Areas.Admin.Models.ComboViewModel

<div class="container">
    <div class="card shadow-sm p-4">
        <h4 class="text-primary">@Model.TenCombo</h4>
        <p><strong>Giá:</strong> <span class="text-danger">@Model.Gia.ToString("N0") VND</span></p>
        <p><strong>Mô tả:</strong> @Model.MoTa</p>

        <div class="mb-3">
            <strong>Hình ảnh:</strong><br>
            <img src="@(string.IsNullOrEmpty(@Model.HinhAnh) ? "/images/default-combo.png" : $"data:image/jpeg;base64,{@Model.HinhAnh}")"
                 class="rounded border"
                 style="width: 80px; height: 80px; object-fit: cover;">
        </div>

        <hr>

        <h5 class="mt-3">📦 Danh sách sản phẩm trong Combo:</h5>
        @if (Model.ChiTietCombos != null && Model.ChiTietCombos.Any())
        {
            <table class="table table-bordered mt-3">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 20%;">Số lượng</th>
                        <th style="width: 80%;">Tên sản phẩm</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ChiTietCombos)
                    {
                        <tr>
                            <td class="text-center">@item.SoLuong</td>
                            <td>@item.TenSanPham</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">Không có sản phẩm nào trong combo.</div>
        }
    </div>
</div>
