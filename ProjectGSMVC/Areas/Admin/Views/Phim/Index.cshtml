<script>

    $(document).on('click', '.edit-phim', function () {
        var id = $(this).data('id');
        $.ajax({
            url: '/Admin/Phim/GetPhim',
            type: 'GET',
            data: { id: id },
            success: function (response) {
                if (response.success) {

                    var data = response.data;

                    $('#editPhimId').val(data.id);
                    $('#editTenPhim').val(data.tenPhim);
                    $('#editTheLoai').val(data.theLoai);
                    $('#editThoiLuong').val(data.thoiLuong);
                    $('#editDaoDien').val(data.daoDien);
                    $('#editGioiHanDoTuoi').val(data.gioiHanDoTuoi);
                    $('#editNgayKhoiChieu').val(data.ngayKhoiChieu.split('T')[0]);
                    $('#editNgayKetThuc').val(data.ngayKetThuc.split('T')[0]);
                    $('#editSoSuatChieu').val(data.soSuatChieu);
                    $('#editMoTa').val(data.moTa);

                    var imageSrc = `data:image/jpeg;base64,${Convert.ToBase64String(data.hinhAnhs[0].hinhAnh1)}`; // Assuming you have the image data in base64 format
                    $('#editPosterPreview').attr('src', imageSrc);



                } else {
                    alert(response.message);
                }
            },
            error: function () {
                alert('Có lỗi xảy ra khi lấy dữ liệu phim!');
            }
        });
    });
</script>
<script>
    $("#btnUpdatePhim").click(function () {
        var id = $("#editPhimId").val();
        var formData = new FormData();

        // Add form data to FormData object
        formData.append("id", id);
        formData.append("TenPhim", $("#editTenPhim").val());
        formData.append("TheLoai", $("#editTheLoai").val());
        formData.append("ThoiLuong", $("#editThoiLuong").val());
        formData.append("DaoDien", $("#editDaoDien").val());
        formData.append("GioiHanDoTuoi", $("#editGioiHanDoTuoi").val());
        formData.append("NgayKhoiChieu", $("#editNgayKhoiChieu").val());
        formData.append("NgayKetThuc", $("#editNgayKetThuc").val());
        formData.append("SoSuatChieu", $("#editSoSuatChieu").val());
        formData.append("MoTa", $("#editMoTa").val());

        var posterFile = $("#editPoster")[0].files[0];
        if (posterFile) {
            formData.append("Poster", posterFile);
        }

        $.ajax({
            url: "/Admin/Phim/Update",
            type: "POST",
            data: formData,
            processData: false, // Important for FormData
            contentType: false, // Important for FormData
            success: function (response) {
                if (response.success) {
                    alert("Cập nhật phim thành công!");
                    location.reload();
                } else {
                    alert("Cập nhật phim thất bại!"); // Or handle specific error messages
                }
            },
            error: function (xhr, status, error) {
                alert("Đã xảy ra lỗi khi cập nhật phim.");
                console.error("Error updating movie:", xhr.responseText);
            }
        });
    });


    $('#editPoster').on('change', function () {
        var preview = document.getElementById('editPosterPreview');
        var file = this.files[0];
        var reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        }

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = ""; // Or keep the old image if you want
        }
    });

</script>
<script>
    $(document).on('click', '.delete-phim', function (e) {
        e.preventDefault();

        const phimId = $(this).data('id');
        if (confirm("Bạn có chắc chắn muốn xóa phim này?")) {
            $.ajax({
                url: '/Admin/Phim/Delete', // Thay 'YourController' bằng tên controller của bạn
                type: 'POST',
                data: { id: phimId },
                success: function (response) {
                    if (response.success) {
                        alert(response.message);
                        location.reload(); // Tải lại trang sau khi xóa thành công
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Đã xảy ra lỗi. Vui lòng thử lại!");
                }
            });
        }
    });
</script>
<script>
    $(document).on('click', '.detail-phim', function () {

        var id = $(this).data('id');
        $.ajax({
            url: '/Admin/Phim/GetPhim',
            type: 'GET',
            data: { id: id },
            success: function (response) {

                if (response.success) {

                    var data = response.data;
                    console.log(data);

                    $('#detailTenPhim').text(data.tenPhim);
                    $('#detailTheLoai').text(data.theLoai);
                    $('#detailThoiLuong').text(data.thoiLuong + " phút");
                    $('#detailDaoDien').text(data.daoDien);
                    $('#detailGioiHanDoTuoi').text(data.gioiHanDoTuoi);
                    $('#detailNgayKhoiChieu').text(data.ngayKhoiChieu.split('T')[0]);
                    $('#detailNgayKetThuc').text(data.ngayKetThuc.split('T')[0]);
                    $('#detailSoSuatChieu').text(data.soSuatChieu);
                    $('#detailMoTa').text(data.moTa);


                    // Assuming the first image in hinhAnhs is the poster
                    if (data.hinhAnhs && data.hinhAnhs.length > 0) {
                        var imageSrc = `data:image/jpeg;base64,${Convert.ToBase64String(data.hinhAnhs[0].hinhAnh1)}`;
                        $('#detailPoster').attr('src', imageSrc);
                        $('#detailPoster').show(); // Ensure the image is visible
                    } else {
                        $('#detailPoster').hide(); // Hide the image if there's none
                    }


                } else {
                    alert(response.message);
                }
            },
            error: function () {
                alert('Có lỗi xảy ra khi lấy dữ liệu phim!');
            }
        });
    });

</script>