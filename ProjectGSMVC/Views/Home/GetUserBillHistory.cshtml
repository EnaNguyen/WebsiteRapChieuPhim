@using ProjectGSMAUI.Api.Modal;
@model List<BillHistoryModal>

@{
    ViewData["Title"] = "Lịch Sử Giao Dịch";
}

<div style="margin-top: 200px;">
    <h2 class="text-center mt-4">Lịch Sử Giao Dịch</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Mã Hóa Đơn</th>
                    <th>Tên Phim</th>
                    <th>Giờ Chiếu Phim</th>
                    <th>Tên Người Dùng</th>
                    <th>Mã Ghế</th>
                    <th>Ngày Tạo Hóa Đơn</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bill in Model)
                {
                    <tr>
                        <td>@bill.MaHoaDon</td>
                        <td>@bill.TenPhim</td>
                        <td>@bill.GioDatPhim.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@bill.TenUser</td>
                        <td>
                            <div style="display:inline">
                                @foreach (var notitem in bill.MaGhe)
                                {
                                    <div style="display: flex;
                                                justify-content: center;
                                                align-items: center;
                                                border-radius: 5px;
                                                border: 1px solid black;
                                                width: 50px;
                                                height: 40px;
                                                font-weight: bold;
                                                background-color: #f8f9fa;
                                                box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);">
                                        @notitem
                                    </div>
                                }
                           </div>
                        </td>
                        <td>@bill.NgayTaoHoaDon.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info mt-3 text-center">
            Không có lịch sử giao dịch nào.
        </div>
    }
</div>
