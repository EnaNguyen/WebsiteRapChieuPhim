<script>
    $(document).ready(function () {
        var baseTicketCost = parseInt($("#total").text()) || 0;
        var foodTotal = 0;
        var comboTotal = 0;
        var DiscountPercent = 1;
        var MaGiamGiaApDung = '';
        console.log(baseTicketCost);
        // Hàm tính lại tổng tiền bao gồm giá vé và giá thức ăn
        document.querySelectorAll('.checkbox3').forEach(function (checkbox) {
            checkbox.addEventListener('change', function () {
                const quantityInput = this.closest('label').nextElementSibling;
                if (this.checked) {
                    quantityInput.disabled = false;
                } else {
                    quantityInput.disabled = true;
                    quantityInput.value = 0;
                    recalcTotal();
                }
            });
        });
        document.querySelectorAll('.checkbox4').forEach(function (checkbox) {
            checkbox.addEventListener('change', function () {
                const quantityInput = this.closest('label').nextElementSibling;
                if (this.checked) {
                    quantityInput.disabled = false;
                } else {
                    quantityInput.disabled = true;
                    quantityInput.value = 0;
                    recalcTotal1();
                }
            });
        });
        function recalcTotal() {
            foodTotal = 0;
            // Duyệt qua các checkbox được tick trong phần Thức Ăn
            $(".ThucAn .checkbox3:checked").each(function () {
                var id = parseInt($(this).val());
                var quantity = parseInt($(this).closest("label").next("input.quantity").val()) || 1;
                var donGia = 0;
                switch (id) {
                    case 2:
                        donGia = 30000;
                        break;
                    case 3:
                        donGia = 50000;
                        break;
                    case 4:
                        donGia = 70000;
                        break;
                    case 5:
                    case 6:
                        donGia = 30000;
                        break;
                }
                foodTotal += quantity * donGia;
            });
            // Tổng tiền = giá vé cơ bản + tổng tiền thức ăn
            var newTotal = (baseTicketCost + foodTotal + comboTotal) / (DiscountPercent);
            $("#total1").text(newTotal);
            console.log(newTotal);
        }
        function recalcTotal1() {
            comboTotal = 0;
            $(".quantity1").each(function () {
                var gia = parseInt($(this).attr("data-Gia")) || 0;
                var soLuong = parseInt($(this).val()) || 0;
                comboTotal += gia * soLuong;
            });
            var total = (baseTicketCost + comboTotal + foodTotal) / (DiscountPercent);
            $("#total1").text(total);
        }

        // Gọi hàm tính lại khi giá trị input thay đổi
        $(".quantity1").on("change", function () {
            recalcTotal1();
        });
        $(".quantity").on("change", function () {
            recalcTotal();
        });
        var caChieuDaChon = '';
        function loadAvailableDates() {
            var selectedMovie = $("#TenPhim option:selected");
            var movieName = selectedMovie.text();
            var minDate = selectedMovie.data("ngaykhoichieu");
            var maxDate = selectedMovie.data("ngayketthuc");
            var today = new Date().toISOString().split('T')[0];
            if (minDate < today) {
                minDate = today;
            }
            $("#PhimDaChon").text(movieName);
            $("#PhimDaChon1").text(movieName);
            $("#NgayDatVe").attr("min", minDate);
            $("#NgayDatVe").attr("max", maxDate);
            console.log(minDate);
            if (minDate) {
                $("#NgayDatVe").val(minDate);
                loadShowtimes();
            }
        }

        function loadShowtimes() {
            var movieId = $("#TenPhim").val();
            var selectedDate = $("#NgayDatVe").val();
            $("#NgayChieuPhim").text(selectedDate); // Display selected date
            $("#NgayChieuPhim1").text(selectedDate);
            if (!movieId || !selectedDate) return;

            $.ajax({
                url: `/Home/GetLichChieuByDate?id=${movieId}&date=${selectedDate}`,
                type: "GET",
                success: function (response) {
                    $("#GioChieu").empty();
                    console.log(response);
                    if (response.length > 0) {
                        $(".next").remove();
                        response.forEach(function (item) {
                            var gioChieu = item.gioChieu;
                            var maGioChieu = item.maGioChieu;
                            $("#Tab1").append(`<input data-MaLichChieu="${item.maLichChieu}" data-id="${maGioChieu}" type="button" name="next" class="next action-button" value="${gioChieu}" style="height:40px;size: 1.5u"/>`);
                        });
                        $('.entry-order-content').each(function () {
                            var current_fs, next_fs, previous_fs;
                            var left, opacity, scale;
                            var animating;

                            $(".next").on('click', function () {
                                if (animating) return false;
                                animating = true;
                                caChieuDaChon = $(this).data("id");
                                var LichChieu = $(this).data("malichchieu");
                                var gioChieu = $(this).val();
                                console.log(LichChieu);
                                $("#KhungGioChieu").text(gioChieu);
                                $("#KhungGioChieu1").text(gioChieu);
                                $.ajax({
                                    url: `/Home/GetVeByDate?LichChieu=${LichChieu}`,
                                    type: "GET",
                                    success: function (response) {
                                        console.log(response);
                                        response.forEach(function (id) {
                                            var element = document.getElementById(id);
                                            if (element) {
                                                element.classList.replace("available", "unavailable");
                                            }
                                        });
