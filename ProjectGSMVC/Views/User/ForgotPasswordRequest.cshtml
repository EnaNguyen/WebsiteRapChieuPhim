@{
    ViewData["Title"] = "Quên Mật Khẩu";
    Layout = null; 
}

<link href="~/css/auth-style.css" rel="stylesheet" /> 

<div class="auth-container forgot-password-container">
    <div class="auth-left-panel">
        <div class="logo-area">
            <img src="~/user/images/cgs_cinema_white.png" alt="Starlight Entertainment Center Logo" class="auth-logo" />
        </div>
        <div class="welcome-text">
            Bạn quên mật khẩu? <br />
            Đừng lo lắng, hãy nhập email của bạn và chúng tôi sẽ gửi mã OTP để đặt lại mật khẩu.
        </div>
    </div>
    <div class="auth-right-panel">
        <div class="auth-form-box forgot-password-box">
            <h2>Quên Mật Khẩu</h2>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }
            <div>
                <form asp-controller="User" asp-action="ForgotPasswordRequest" method="post" class="auth-form forgot-password-form">
                    <div class="form-group">
                        <input type="email" class="form-control auth-input" id="email" name="email" placeholder="Nhập email của bạn" style="color:black" >
                    </div>
                    <button type="submit" class="btn auth-button">Gửi OTP</button>
                    <p class="mt-3 back-to-login-link">Nhớ mật khẩu? <a asp-action="Login">Đăng nhập</a></p>
                </form>
            </div>
            
        </div>
    </div>
</div>