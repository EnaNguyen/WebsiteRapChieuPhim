@{
    ViewData["Title"] = "Đặt Lại Mật Khẩu";
    Layout = null;
}

<link href="~/css/auth-style.css" rel="stylesheet" /> 

<div class="auth-container reset-password-container">
    <div class="auth-left-panel">
        <div class="logo-area">
            <img src="~/user/images/cgs_cinema_white.png" alt="Starlight Entertainment Center Logo" class="auth-logo" />
        </div>
        <div class="welcome-text">
            Đặt lại mật khẩu của bạn.<br />
            Nhập mật khẩu mới của bạn bên dưới.
        </div>
    </div>
    <div class="auth-right-panel">
        <div class="auth-form-box reset-password-box">
            <h2>Đặt Lại Mật Khẩu</h2>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }
            <form asp-controller="User" asp-action="ResetPassword" method="post" class="auth-form reset-password-form">
                <input type="hidden" name="email" value="@ViewBag.Email" /> @* Hidden field to pass email *@
                <input type="hidden" name="otp" value="@ViewBag.OTP" />     @* Hidden field to pass OTP *@
                <div class="form-group">
                    <input type="password" class="form-control auth-input" id="newPassword" name="newPassword" placeholder="Mật khẩu mới" style="color:black" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control auth-input" id="confirmPassword" name="confirmPassword" placeholder="Xác nhận mật khẩu mới" style="color:black" required>
                </div>
                <button type="submit" class="btn auth-button">Đặt Lại Mật Khẩu</button>
                <p class="mt-3 back-to-login-link">Nhớ mật khẩu? <a asp-action="Login">Đăng nhập</a></p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $("form.reset-password-form").submit(function (event) {
                var newPassword = $("#newPassword").val();
                var confirmPassword = $("#confirmPassword").val();

                if (newPassword !== confirmPassword) {
                    event.preventDefault(); // Prevent form submission
                    alert("Mật khẩu xác nhận không khớp."); // Or display error in a better way
                }
            });
        });
    </script>
}