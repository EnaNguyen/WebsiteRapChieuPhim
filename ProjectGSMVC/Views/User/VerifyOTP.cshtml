@{
    ViewData["Title"] = "Xác Minh OTP";
    Layout = null;
}

<link href="~/css/auth-style.css" rel="stylesheet" /> 

<div class="auth-container verify-otp-container">
    <div class="auth-left-panel">
        <div class="logo-area">
            <img src="~/user/images/cgs_cinema_white.png" alt="Starlight Entertainment Center Logo" class="auth-logo" />
        </div>
        <div class="welcome-text">
            Xác minh OTP <br />
            Vui lòng nhập mã OTP đã được gửi đến email của bạn.
        </div>
    </div>
    <div class="auth-right-panel">
        <div class="auth-form-box verify-otp-box">
            <h2>Xác Minh OTP</h2>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <form asp-controller="User" asp-action="VerifyOTP" method="post" class="auth-form verify-otp-form">
                <input type="hidden" name="email" value="@ViewBag.Email" /> @* Hidden field to pass email *@
                <div class="form-group">
                    <input type="text" class="form-control auth-input" id="otp" name="otp" placeholder="Mã OTP" style="color:black" required>
                </div>
                <button type="submit" class="btn auth-button">Xác Minh OTP</button>
                <p class="mt-3 resend-otp-link">Chưa nhận được OTP? <a asp-action="ForgotPasswordRequest" asp-route-email="@ViewBag.Email">Gửi lại OTP</a></p> @* Resend link *@
            </form>
        </div>
    </div>
</div>