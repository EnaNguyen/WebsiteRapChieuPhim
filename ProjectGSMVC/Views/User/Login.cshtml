@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<link href="~/css/auth-style.css" rel="stylesheet" /> @* Link to the new CSS file *@

<div class="auth-container">
    <div class="auth-left-panel">
        <div class="welcome-text">
            <h1>WELCOME ! XIN CHÀO !</h1>
        </div>
        <div class="logo-area">
            <img src="~/User/images/page_1601_1712215670_1713753865.jpg" alt="Starlight Entertainment Center Logo" class="auth-logo" style="height: 400px; max-width: 800px;" />
        </div>
        
    </div>
    <div class="auth-right-panel">
        <div class="auth-form-box login-box">
            <h2>Đăng nhập</h2>
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            <form asp-controller="User" asp-action="Login" method="post" class="auth-form">
                <input type="hidden" name="returnUrl" value="@Context.Session.GetString("ReturnUrl")" />
                <div class="form-group">
                    <input type="text" class="form-control auth-input" id="tenTaiKhoan" name="tenTaiKhoan" placeholder="Email / Tên đăng nhập" required style="color:black">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control auth-input" id="matKhau" name="matKhau" placeholder="Mật khẩu(*)" style="color:black" required>
                </div>
                <div class="form-group forgot-register-links">
                    <a asp-action="Register" class="register-link">Đăng ký</a> / <a href="#" class="forgot-password-link">Quên mật khẩu?</a>
                </div>
                <button type="submit" class="btn auth-button">Đăng nhập</button>
            </form>          
        </div>
    </div>
</div>