@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Keep your layout
}

<link href="~/css/auth-style.css" rel="stylesheet" /> @* Link to the new CSS file *@

@model ProjectGSMVC.Areas.Admin.Models.TaiKhoanModel

<div class="auth-container register-container">
    <div class="auth-left-panel">
        <div class="logo-area">
            <img src="~/User/images/logo.png" alt="Starlight Entertainment Center Logo" class="auth-logo" />
        </div>
        <div class="welcome-text">
            Đăng ký tài khoản thành viên và nhận ngay ưu đãi!
        </div>
    </div>
    <div class="auth-right-panel">
        <div class="auth-form-box register-box">
            <h2>Thông tin tài khoản</h2>
            <form asp-controller="User" asp-action="Register" method="post" enctype="multipart/form-data" class="auth-form register-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input asp-for="TenNguoiDung" class="form-control auth-input" placeholder="Họ & tên(*)" style="color:black">
                        <span asp-validation-for="TenNguoiDung" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <input asp-for="Email" class="form-control auth-input" placeholder="Email (*)" style="color:black">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input asp-for="DiaChi" class="form-control auth-input" placeholder="Địa chỉ(*)" style="color:black">
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <input asp-for="TenTaiKhoan" class="form-control auth-input" placeholder="Tên đăng nhập (*)" style="color:black">
                        <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input asp-for="Cccd" class="form-control auth-input" placeholder="CCCD(*)" style="color:black">
                        <span asp-validation-for="Cccd" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <input asp-for="MatKhau" type="password" class="form-control auth-input" placeholder="Mật khẩu(*)" style="color:black">
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input asp-for="NgaySinh" type="date" class="form-control auth-input" placeholder="Ngày sinh" style="color:black">
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <input asp-for="ReMatKhau" type="password" class="form-control auth-input" placeholder="Nhập lại mật khẩu(*)" style="color:black">
                        <span asp-validation-for="ReMatKhau" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input asp-for="Sdt" class="form-control auth-input" placeholder="Điện thoại(*)" style="color:black">
                        <span asp-validation-for="Sdt" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6 gender-radio">
                        <label class="gender-label">Giới Tính:</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="GioiTinh" value="1" id="maleRadio">
                            <label class="form-check-label" for="maleRadio">Nam</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="GioiTinh" value="0" id="femaleRadio">
                            <label class="form-check-label" for="femaleRadio">Nữ</label>
                        </div>
                        <span asp-validation-for="GioiTinh" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group hidden-upload">
                    <label asp-for="ImageFile" class="form-label">Hình Ảnh:</label>
                    <input asp-for="ImageFile" type="file" class="form-control auth-input" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>


                <button type="submit" class="btn auth-button">Đăng ký</button>
                <p class="mt-3 register-login-link">Đã có tài khoản? <a asp-action="Login">Đăng nhập</a></p>
            </form>
        </div>
    </div>
</div>